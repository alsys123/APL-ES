<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Spreadsheet Exporter (Public Read-only)</title>
  <script src="https://cdn.jsdelivr.net/npm/jszip@3.10.1/dist/jszip.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/file-saver@2.0.5/dist/FileSaver.min.js"></script>
</head>
<body>
  <h1>Export Google Spreadsheet to ZIP</h1>
  <input id="spreadsheetId" placeholder="Enter Spreadsheet ID">
  <button onclick="exportSpreadsheet()">Export</button>
  <p id="status"></p>

  <script>
    async function exportSpreadsheet() {
      const spreadsheetId = document.getElementById('spreadsheetId').value.trim();
      if (!spreadsheetId) {
        document.getElementById("status").textContent = "Please enter a Spreadsheet ID.";
        return;
      }

      try {
        document.getElementById("status").textContent = "Fetching sheet list...";

        // Fetch metadata JSON (no auth needed if public)
        const metaUrl = `https://docs.google.com/spreadsheets/d/${spreadsheetId}/gviz/tq?`;
        const metaResp = await fetch(metaUrl);
        const metaText = await metaResp.text();

        // Extract sheet names from the response
        const sheetRegex = /sheetId:\d+,\s+title:"([^"]+)"/g;
        const sheetNames = [];
        let match;
        while ((match = sheetRegex.exec(metaText)) !== null) {
          sheetNames.push(match[1]);
        }

        if (sheetNames.length === 0) {
          document.getElementById("status").textContent = "No sheets found or spreadsheet not public.";
          return;
        }

        const zip = new JSZip();

        for (const name of sheetNames) {
          const csvUrl = `https://docs.google.com/spreadsheets/d/${spreadsheetId}/gviz/tq?tqx=out:csv&sheet=${encodeURIComponent(name)}`;
          const resp = await fetch(csvUrl);
          const csv = await resp.text();
          zip.file(`${name}.csv`, csv);
        }

        document.getElementById("status").textContent = "Packaging ZIP...";
        const content = await zip.generateAsync({ type: "blob" });
        saveAs(content, `${spreadsheetId}.zip`);
        document.getElementById("status").textContent = "Download complete.";
      } catch (err) {
        document.getElementById("status").textContent = "Error: " + err.message;
      }
    }
  </script>
</body>
</html>
